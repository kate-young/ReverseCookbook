<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<% @recipes.each do |recipe| %>
<div id="<%=dom_id(recipe)%>" class="panel panel-default panel-list">
   <div class="panel-heading">
      <%= recipe.name %>
       <span class="pull-right">
       <%= link_to 'Show', recipe, class: "btn btn-default btn-xs" %>
       <%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-default btn-xs" %>
       <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %>
       </span>
    </div>
    <div class="panel-body"><%= recipe.description %>
    </div>
</div>
<% end %>
<%= link_to 'New Recipe', new_recipe_path, class: "btn btn-default btn-block btn-list" %>
